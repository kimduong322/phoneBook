<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_detailView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#71F6EA"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="745dp">

        <TextView
            android:id="@+id/avatar_detail"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_marginTop="65dp"
            android:background="@drawable/rounded_corners"
            android:gravity="center"
            android:text="T"
            android:textColor="#F4F1F1"
            android:textSize="120sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Name"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/avatar_detail"
            tools:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView_call"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="68dp"
            android:layout_marginTop="56dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_detail"
            app:srcCompat="@android:drawable/ic_menu_call" />

        <ImageView
            android:id="@+id/imageView_email"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="68dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_detail"
            app:srcCompat="@android:drawable/ic_dialog_email" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_call"
            app:layout_constraintEnd_toStartOf="@+id/imageView_email"
            app:layout_constraintStart_toEndOf="@+id/imageView_call"
            app:layout_constraintTop_toBottomOf="@+id/name_detail"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/icons8_messages_50" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Call"
            app:layout_constraintEnd_toEndOf="@+id/imageView_call"
            app:layout_constraintStart_toStartOf="@+id/imageView_call"
            app:layout_constraintTop_toBottomOf="@+id/imageView_call" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Message"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Email"
            app:layout_constraintEnd_toEndOf="@+id/imageView_email"
            app:layout_constraintStart_toStartOf="@+id/imageView_email"
            app:layout_constraintTop_toBottomOf="@+id/imageView_email" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="36dp"
            android:text="Basic Information"
            android:textSize="27sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            tools:textStyle="italic" />

        <TextView
            android:id="@+id/phoneNumbDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="28dp"
            android:text="0988888888"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:id="@+id/email_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="112dp"
            android:text="daokimduong322@gmail.com"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="@+id/phoneNumbDetail"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="130dp"
            android:layout_height="24dp"
            android:layout_marginTop="4dp"
            android:text="Mobile Phone"
            app:layout_constraintStart_toStartOf="@+id/phoneNumbDetail"
            app:layout_constraintTop_toBottomOf="@+id/phoneNumbDetail" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="130dp"
            android:layout_height="24dp"
            android:layout_marginTop="4dp"
            android:text="Personal Email"
            app:layout_constraintStart_toStartOf="@+id/email_detail"
            app:layout_constraintTop_toBottomOf="@+id/email_detail" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="45dp"
            android:layout_height="49dp"
            android:layout_marginTop="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.42"
            app:layout_constraintStart_toEndOf="@+id/phoneNumbDetail"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:srcCompat="@android:drawable/presence_video_away" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="42sp"
            android:layout_height="42dp"
            android:layout_marginTop="39dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:srcCompat="@drawable/icons8_messages_50" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>